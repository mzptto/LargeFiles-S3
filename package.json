{
  "name": "s3-zip-downloader",
  "version": "1.0.0",
  "description": "Web application to download ZIP files from URLs directly to S3",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "infrastructure"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../infrastructure && npm install",
    "build:frontend": "cd frontend && npm run build",
    "build:frontend:prod": "cd frontend && npm run build:prod",
    "build:backend": "cd backend && npm run build",
    "build:infrastructure": "cd infrastructure && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend && npm run build:infrastructure",
    "build:docker": "pwsh -File scripts/build-docker.ps1",
    "build:docker:version": "pwsh -File scripts/build-docker.ps1",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "deploy:cdk": "pwsh -File scripts/deploy-cdk.ps1",
    "deploy:cdk:with-approval": "pwsh -File scripts/deploy-cdk.ps1 -RequireApproval",
    "deploy:frontend": "npm run build:frontend:prod && pwsh -File scripts/deploy-frontend.ps1",
    "deploy:frontend:node": "npm run build:frontend:prod && node scripts/deploy-frontend.js",
    "deploy:docker": "npm run build:docker",
    "deploy:docker:codebuild": "node scripts/build-docker-codebuild.js",
    "deploy:all": "npm run deploy:cdk && npm run deploy:docker && npm run deploy:frontend",
    "deploy": "npm run deploy:cdk"
  },
  "keywords": [
    "s3",
    "zip",
    "download",
    "aws",
    "lambda",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "archiver": "^7.0.1"
  }
}
